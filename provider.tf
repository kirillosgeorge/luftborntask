terraform {
  required_version = ">=0.12"

  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "~>2.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~>3.0"
    }
    tls = {
      source = "hashicorp/tls"
      version = "~>4.0"
    }
  }
}

provider "azurerm" {
    version = "3.29.1"
    alias = "networking"
    subscription_id = var.subscription_id
    client_id = var.client_id 
    client_secret = var.client_secret
  
}